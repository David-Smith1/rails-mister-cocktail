 <div class="banner-show">
   <div class="container text-center">
    <div class="row">
    <div class="col-lg-8 text-left">
    <h1><%=@cocktail.name%></h1>
    </div>
    <div class="col-lg-4">
    </div>
    </div>
    </div>
  </div>
</div>

<div class="container text-center">
    <div class="row">
      <div class="col-lg-4 text-left">
        <%= cl_image_tag @cocktail.photo.key, height: 300, width:300, crop: :fill, class: "cocktail-img" %>
      </div>
      <div class="col-lg-8">
        <div class="card-ingredient">
            <% @cocktail.doses.each do |dose| %>
            <div class="ingredients-flex">
              <p><%= "#{dose.ingredient.name} - "%></p>
              <p><%= dose.description %></p>
              <%= link_to dose_path(dose), method: :delete, data: {confirm: "Remove #{dose.ingredient.name}?"} do %>
                <i class="fas fa-trash"> </i> 
              <% end %>
            </div>
            <% end %>
<!-- Button trigger modal -->

<%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), :data => { :toggle => "modal", :target => "#exampleModalCenter" }, class: 'btn btn-outline-light' %>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"></h5>
      </div>
      <div class="modal-body text-left">
         <%= simple_form_for [@cocktail, @dose], remote: true do |f| %>
         <%= f.association :ingredient %>
         <%= f.input :description %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
         <%= f.submit "Add ingredient", class: "btn btn-outline-dark" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


       






 <div class="banner-show">
   <div class="container text-center">
    <div class="row">
    <div class="col-lg-8 text-left">
    <h1><%=@cocktail.name%></h1>
    </div>
    <div class="col-lg-4">
    </div>
    </div>
    </div>
  </div>
</div>

<div class="container text-center">
    <div class="row">
      <div class="col-lg-4 text-left">
        <%= cl_image_tag @cocktail.photo.key, height: 300, width:300, crop: :fill, class: "cocktail-img" %>
      </div>
      <div class="col-lg-8">
        <div class="card-ingredient">
            <% @cocktail.doses.each do |dose| %>
            <div class="ingredients-flex">
              <p><%= "#{dose.ingredient.name} - "%></p>
              <p><%= dose.description %></p>
              <%= link_to dose_path(dose), method: :delete, data: {confirm: "Remove #{dose.ingredient.name}?"} do %>
                <i class="fas fa-trash"> </i> 
              <% end %>
            </div>
            <% end %>

<button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#exampleModalCenter">
  Add ingredient
</button>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"></h5>
      </div>
      <div class="modal-body text-left">
         <%= simple_form_for [@cocktail, @dose] do |f| %>
         <%= f.association :ingredient %>
         <%= f.input :description %>
         <%= f.submit "Add ingredient", class: "btn btn-outline-dark text-right" %>
         <%= f.submit "Cancel", class: "btn btn-secondary text-right", :data => {:dismiss => "modal"} %>
         <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>


       





        </div>
      </div>
    </div>
  </div>





<footer class="footer text-center text-lg-start fixed-bottom">
  <div class="text-center p-3">
    <i class="fas fa-glass-martini-alt"></i>
    <a>Cocktail King</a>
  </div>
</footer>

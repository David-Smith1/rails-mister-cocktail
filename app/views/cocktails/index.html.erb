<%= link_to "Add a cocktail", new_cocktail_path  %>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-lg-3 col-md-6">
        <div class="card-category">
          <%= link_to cocktail.name,cocktail_path(cocktail)  %>
          <div class="delete-button">
            <%= link_to cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure you want to delete #{cocktail.name}?"} do %>
                <i class="fas fa-trash"> </i> 
            <% end %>
          </div>  
      </div>
    </div>
    <% end %>
  </div>
</div>

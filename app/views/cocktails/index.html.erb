 <div class="banner">
   <div class="container text-center">
    <div class="row">
    <div class="col-lg-8 text-left">
    <h1>Cocktail King</h1>
    <p>For relaxing times, make it.. Suntory time</p>
    </div>
    <div class="col-lg-4">
     <div class="card text-center">
       <h2>Discover</h2>
       <br>
       <br>
       <br>
         <form action="Submit">
          <div class="slider-left-1">
           <p>bitter</p>
          </div>
           <div class="slider-right-1">
           <p>sweet</p>
          </div>
          <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
           <br>
           <br>
           <br>
           <br>
            <div class="slider-left-2">
           <p>dry</p>
          </div>
           <div class="slider-right-2">
           <p>refreshing</p>
          </div>
           <input type="range" min="1" max="100" value="50" class="slider" id="myRange">
           <br>
           <br>
           <br>
           <br>
             <%= link_to "Find your drink", cocktail_path(@cocktails.sample), class: "btn btn-outline-light" %>
         </form>
      </div>
    </div>
    </div>
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-lg-3 col-md-6">
        <div class="card-category">
           <%= cl_image_tag cocktail.photo.key, class: "card-category-img" %>
           <%= link_to cocktail.name,cocktail_path(cocktail)%>
          <div class="delete-button">
            <%= link_to cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure you want to delete #{cocktail.name}?"} do %>
              <i class="fas fa-trash"> </i> 
            <% end %>
          </div>  
      </div>
    </div>
    <% end %>
  </div>
</div>
<footer class="footer text-center text-lg-start">
  <div class="text-center p-3">
    <i class="fas fa-glass-martini-alt"></i>
    <a>Cocktail King</a>
  </div>
</footer>
